<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ChartActivity">

    <Button
        android:id="@+id/btn_cetak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNDUH"
        android:drawableLeft="@drawable/ic_baseline_cloud_download_24"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:backgroundTint="#95D698"
        android:layout_margin="6dp"
         />

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grafik Laju Penggunaan Air"
        android:layout_alignParentLeft="true"
        android:layout_margin="6dp"
        android:textColor="#5e5e5e"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center" />
    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/idktr"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:dotsColor="#0000"
        app:selectedDotColor="@color/blue_btn_bg_color"
        app:dotsSize="11dp"
        app:dotsSpacing="5dp"
        app:progressMode="true"
        android:layout_below="@+id/judul"/>
    <androidx.cardview.widget.CardView
        android:layout_below="@+id/idktr"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vplist"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>